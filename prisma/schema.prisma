generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tenant {
  id    Int     @id @default(autoincrement())
  name  String
  slug  String  @unique
  plan  String  @default("FREE")
  users User[]
  notes Note[]
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String
  tenant   Tenant  @relation(fields: [tenantId], references: [id])
  tenantId Int
  notes    Note[]
}

model Note {
  id       Int    @id @default(autoincrement())
  title    String
  content  String
  tenant   Tenant @relation(fields: [tenantId], references: [id])
  tenantId Int
  user     User   @relation(fields: [userId], references: [id])
  userId   Int
}
